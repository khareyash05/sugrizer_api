<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%data.forEach(function(assignment){%>
        <%if(assignment.submit=== false){ %> 
            <h1>Not submitted</h1>
            <div>
                <h1>Title - <%=assignment.title%></h1>
                <p> Description -<%=assignment.description%></p>
                <p>DueDate - <%=assignment.dueDate%></p>
                <p>State - <%=assignment.submit%></p>
                <form method="post">
                    Your Answer<br><textarea name="answer" id="" cols="30" rows="10"></textarea>
                    <input name="id" value="<%=assignment._id%>"type="hidden"/>
                    <button type="submit">Submit</button>
                </form>
            </div>
        <%}else{%>
            <h1>Submitted</h1>
            <div>
                <h1>Title - <%=assignment.title%></h1>
                <p> Description -<%=assignment.description%></p>
                <p>DueDate - <%=assignment.dueDate%></p>
                <p>State - <%=assignment.submit%></p>
            </div>
        <%}%>
    <%});%>
</body>
</html>